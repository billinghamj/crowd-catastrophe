<div class="row">
	<div class="col-sm-12">
		{{#with issue}}
			<h1>{{{name}}}</h1>
			<p>Please confirm that you wish to delete this issue</p>

			<form action="/issues/{{{id}}}" method="POST">
				<input type="hidden" name="_method" value="DELETE" />

				<div class="form-group">
					<button type="submit" class="btn btn-danger">Delete</button>
					<a href="/issues/{{{id}}}" class="btn btn-link">Cancel</a>
				</div>
			</form>
		{{/with}}
	</div>
</div>
